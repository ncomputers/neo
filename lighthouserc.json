{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:5173/",
        "http://localhost:5174/",
        "http://localhost:5175/"
      ],
      "numberOfRuns": 1,
      "output": ["html"],
      "reportFilenamePattern": "%%PATHNAME%%-lighthouse.%%EXTENSION%%",
      "chromeFlags": "--no-sandbox",
      "settings": {
        "budgetsPath": "budgets.json"
      }
    },
    "assert": {
      "budgetsFile": "budgets.json"
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lighthouse"
    }
  }
}
