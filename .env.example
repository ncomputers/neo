# WEBHOOK=https://hooks.example.com/endpoint
# DSN template for tenant databases; used to create per-tenant connections
# if a database does not yet exist
# POSTGRES_TENANT_DSN_TEMPLATE=postgresql+asyncpg://user:password@localhost:5432/tenant_{tenant_id}

# Preferred primary database connection URL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/app

# Legacy primary database connection URL
POSTGRES_MASTER_URL=postgresql+asyncpg://user:password@localhost:5432/app

# Redis connection URL (overrides host/port/db)
REDIS_URL=redis://localhost:6379/0

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis database index
REDIS_DB=0

# API server port
API_PORT=8000

# Application environment
APP_ENV=development

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

